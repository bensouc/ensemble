<% if @domain.special? %>
	<%= link_to "/students/#{@student.id}/domains/#{@domain.id}/modal",
      class:"--width-5_7 m-2",
      data:{turbo_frame: "general_modal"} do%>
		<div class="mobile-belt-bar belt-bg-1">
			<div class="bar-style">
				Aucune Ceinture
			</div>
			<div class='pt-2 belt-name text-center'>
				<h6 ><%= @domain.name %></h6>
			</div>
			<%= render 'mobile/belts/star' if @domain.special? %>
		</div>
	<% end %>
<% else %>
	<div class="--width-5_7 m-2">
		<div class="mobile-belt-bar belt-bg-1">
			<div class="bar-style">
				Aucune Ceinture
			</div>
			<div class='pt-2 belt-name text-center'>
				<h6 ><%= @domain.name %></h6>
			</div>
			<%= render 'mobile/belts/star' if @domain.special? %>
		</div>
	</div>
<% end %>
