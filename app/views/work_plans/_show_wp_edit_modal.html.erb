<!-- Modal WP EDIT-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Edition du Plan de Travail</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<%= simple_form_for work_plan, html: { novalidate: false }, class: 'd-flex justify-content-between align-items-baseline pe-3' do |f|%>
				<div class="modal-body">
					<%# <p class='m-left'>Nom :</p> %>
					<%= f.input :name, label: false,
                      required: :true,
                      # placeholder: 'Nom :',
                      input_html: { class: 'area  m-left' } %>
					<div class=" d-flex mt-2">
						<p class=''>Du</p>
						<div class='edit-cal_wp'>
							<%= f.input :start_date, as: :string, label: false,
                          required: :true,
                          input_html: {class: 'datepicker area m-left ', locale: "fr", value: work_plan.start_date.strftime("%d/%m/%Y") } %>
						</div>
						<p class=''>Au</p>
						<div class='edit-cal_wp ms-2'>
							<%= f.input :end_date, as: :string, label: false,
                          required: :true,
                          input_html: {class: 'datepicker area m-left', locale: "fr", value: work_plan.end_date.strftime("%d/%m/%Y")} %>
						</div>
					</div>
					<%# <p class='m-left'>El√®ve :</p> %>
					<%= f.association :student, label: false,
                            collection: current_user.students.order(:first_name),
                            input_html: {class: 'area grow m-left'},
                            label_method: :first_name %>
				</div>
				<div class="modal-footer">
					<%# <button type="button" class="cancel-btn" data-bs-dismiss="modal"><i class="fas fa-times"></i></button> %>
					<%# <button type="button" class="btn btn-primary">Save changes</button> %>
					<%= f.submit "Valider", class: 'area rect-sm btn-valid' %>
				</div>
			</div>
		<% end %>
	</div>
</div>
