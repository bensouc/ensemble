<div class='display-challenge-name'>         <%# titre de la skill %>
	<h4><%= work_plan_skill.skill.name%></h4>
</div>
<div>
	<div class="d-flex " data-controller='edit-challenge'  id="<%=dom_id(work_plan_skill.challenge)%>">
		<%# display le content.body d'un exo %>
		<div class="cont-challenge w-100" data-ajax-replace-challenge-target='content' id="<%= work_plan_skill.challenge.id%>">
			<div class= "pencil-pointor" >
				<div class="challenge-card" >
					<div class="challenge-infos"
          data-edit-challenge-target="pencil" data-action="click->edit-challenge#displayForm"
						data-edit-challenge-target="infos" data-ajax-replace-challenge-target='content'
						id='<%=work_plan_skill.challenge.id %>'>
						<div class="challenge-name-in-content"><%= work_plan_skill.challenge.name%> </div>
						<%= work_plan_skill.challenge.content.body %>
					</div>
				</div>
				<div class="challenge-infos d-none" data-edit-challenge-target="preview" >
				</div>
			</div>
			<%# Display editeur, en d-none de base %>
			<div>
				<%= form_for [work_plan_skill, work_plan_skill.challenge],
                html: { class: 'd-none', data: { edit_challenge_target: 'form' } } do |form| %>
					<div class="field pt-2 pb-2" data-controller="rich-text-table">
						<div>
							<%= form.text_field :name, class: "challenge-title"%>
						</div>
						<%= form.rich_text_area :content %>
					</div>
					<div class="form-actions d-flex justify-content-end height-validate-challenge">
						<%= link_to work_plan_path(@work_plan, anchor: "challenge_#{work_plan_skill.challenge.id}"), class: 'cancel-btn' do %>
							<i class="fas fa-times"></i>
						<% end %>
						<%= form.submit 'Enregistrer', class: 'validate-challenge-btn', data: { confirm: "Attention, modifier cet excercice impactera les autres Plans l'utilisant. Sinon vous pouvez cloner l'exercice." }%>
					</div>
				<% end %>
			</div>
		</div>
		<div class="challenge-mngt">
			<%# cloner un exo %>
			<%= link_to work_plan_skill_clone_path( work_plan_skill, work_plan_skill.challenge.id),
                              action: 'clone', method: 'post',
                              class: 'replace-challenge-btn' do %> <%#data:{ action: "click->replace-challenge#cloneChallenge"}%>
				<i class="far fa-clone me-2"></i>
				<h6>Cloner</h6>
			<% end %>
			<%# REPLACE A CHALLENGE %>
			<div data-controller="skill-add" data-ajax-replace-challenge-exo-value="<%=work_plan_skill.challenge.id%>">
				<div data-edit-challenge-target="button" data-skill-add-target="button" data-action="click->ajax-replace-challenge#showCarrousel" class='replace-challenge-btn'>
					<i class="far fa-folder-open me-2"></i>
					<h6>Charger</h6>
				</div>
			</div>
			<%# REPLACE A CHALLENGE END %>
		</div>
	</div>
</div>
