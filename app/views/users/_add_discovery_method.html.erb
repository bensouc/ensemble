<dialog id="myModal" open>
	<!-- Modal content -->
	<div class="modal-content " style='width: fit-content'>
		<form method="dialog" class='mb-3'>
			<div class="closing-btn  d-flex justify-content-between align-items-center">
				<%= image_tag 'logo_demo.png' if current_user.demo? %>
				<%= image_tag 'https://res.cloudinary.com/dr50qe2fh/image/upload/v1638453284/LOGO_lesptr.svg' unless current_user.demo? %>
				<h4 class='--roseL'>Comment vous avez entendu parler de nous? </h4>
				<button class='--bgc-transparent' >
					<h3 class='--roseL --cursor-pointer'><i class="fa-solid fa-circle-xmark "></i> </h3>
				</button>
			</div>
		</form>
<%= simple_form_for :discovery_method, url: add_discovery_path, method: :post, html: { novalidate: false, class: 'discovery-form' } do |f| %>
	<%= f.error_notification %>
	<div class="form-inputs">

		<div class="user-details">
			<%= f.input :discovery_method, as: :select, collection: User::DISCOVERY_METHOD, required: true,
               label: false, include_blank: "Sélectionnez une méthode de découverte",input_html: {class:'--cursor-pointer'} %>
		</div>
	</div>
	<div class="form-actions mt-2">
		<%= f.button :submit,"Confirmer", class: "btn btn-primary --border-10px --borderc-rose --bgc-rose --blanc" do %>
		<% end %>
	<% end %>
</div>

	</div>
</dialog>
