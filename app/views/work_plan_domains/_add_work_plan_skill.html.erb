
<div data-controller="skill-add" class='pt-3'>
	<div data-skill-add-target="button" data-action="click->skill-add#displayForm" class='add-skill-btn'>
		<h6>Ajouter une compétence  </h6>
		<i class="fas fa-chevron-right"></i>
	</div>
	<div class="d-none" data-skill-add-target="form">
		<%= simple_form_for [WorkPlanSkill.new ], html: { novalidate: false }, url:  work_plan_domain_work_plan_skills_path(work_plan_domain), method: :post, class:'d-flex'  do |f| %>
			<div class=" d-flex justify-content-between pb-1 ">
				<div class='d-flex '>
					<%= select_tag :skill, options_from_collection_for_select(Skill.where(domain: work_plan_domain.domain ,level: work_plan_domain.level).order(:symbol,:id), :id,:name), :prompt => "Sélectionnez Une compétences",class: 'skill-selector', :required => true %>
				</div>
				<div>
					<%= select_tag :kind, raw("<option>jeu</option><option>exercice</option><option>ceinture</option>"), :prompt => "Sélectionnez Un type" ,class: 'skill-selector', :required => true %>
				</div>
			</div>
			<div class='d-flex'>
				<%= f.submit 'Valider' ,class: 'add-skill-btn' %>
				<div class="cancel-btn ms-3" data-action="click->skill-add#displayForm" style='margin-top: 10px'>
					<i class="fas fa-times"></i>
				</div>
			</div>
		<% end %>
	</div>
</div>
