<div class="">
	<h3>Compte  de <%= current_user.first_name.humanize %></h3>
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: { novalidate: false }) do |f| %>
		<%= f.error_notification %>
		<div class="form-inputs">
			<%= f.input :email, required: true, autofocus: true %>
			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
			<% end %>
			<%= f.input :first_name, label: "Prénom" %>
			<%= f.input :last_name, label: "Nom" %>
			<%= f.input :school,  label: "Ecole / groupe",
                            input_html: {
                                          value: f.object.school.name,
                                          disabled: true
                                        },
                            hint: 'Vous ne pouvez éditer cette information',
                            hint_class: '' %>
			<%= f.input :password,
                  label: "Nouveau mot de passe",
                  hint: "Laissez-le vide si vous ne voulez pas le changer",
                  # input_html: { placeholder: "Laissez-le vide si vous ne voulez pas le changer" },
                  required: false
                   %>
			<%= f.input :password_confirmation,
                  label: "Confirmation nouveau Mot de passe",
                  required: false
                  %>
			<%= f.input :current_password,
                  hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: true,
                  label: "Mot de passe actuel"
                  # input_html: { autocomplete: "Mot de passe actuel" }
                  %>
			<label class='mt-1'>Modifier ton avatar</label>
			<%= f.input :avatar, as: :file, label: false, class:"btn-flat"%>
		</div>
		<div class="form-actions d-flex flex-row-reverse">
			<%= f.button :submit, "Modifier",class: 'add-skill-btn' %>
		</div>
	<% end %>
	<div class="grey-line"></div>
	<div class= 'pt-2'>
		<%= link_to "Retour au cartable", :back , class: 'add-skill-btn'%>
	</div>
	<div class="grey-line"></div>
	<div class="m-4">
		<h3>Annuler son Compte</h3>
		<p>Mécontent? </p>
		<%= link_to "Annuler son Compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'delete_acompte_btn' %>
	</div>
</div>
