<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 flash__message" role="alert">
    <%= notice %>
    <div type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true"></span>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show flash__message" role="alert">
    <strong><%= alert %></strong>
    <div type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></div>
  </div>
<% end %>
