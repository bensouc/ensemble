<%= turbo_frame_tag "#{domain.id}_#{level}" do %>
  <% skills.each do |skill| %>
    <% unless skill.nil? %>

        <%= render "show_one", skill: skill %>

    <% end %>
  <% end %>
<% end %>
<div class="grey-line"></div>
<div class="create-skill-box" data-controller='create-skill-display'>
  <div
    class="add-skill-btn validate-btn me-0"
    data-action='click->create-skill-display#displayForm'
    data-create-skill-display-target='button'
  >
    Ajouter une comp√©tence
  </div>
  <div
    class="create-skill-form mt-3 d-none"
    data-create-skill-display-target='formBox'
  >
    <%= render "form",
    skill:
      Skill.new(school: grade.school, level: level, domain: domain) %>
    <div
      class="reset-skill-edit --cursor-pointer"
      data-action='click->create-skill-display#displayForm'
    >
      <div class='rmv-skill-btn'>
        Annuler
      </div>
    </div>
  </div>
</div>
